{% extends 'base.html.twig' %}

{% block title 'Our Health Specialists' %}

{% block body %}

    <main>

        <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">

            {% for speciality, specialists in specialties %}

                <div class="border-b border-gray-200 pt-5 pb-5">
                    <h3 class="text-base font-semibold text-gray-900">{{ speciality }}</h3>
                </div>

                <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
                    {% for specialist in specialists %}
                    <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
                        <div class="flex min-w-0 gap-x-4">
                            <img class="size-12 flex-none rounded-full bg-gray-50" src="{{ asset(specialist.profilePictureUrl) }}" alt="">
                            <div class="min-w-0 flex-auto">
                                <p class="text-sm/6 font-semibold text-gray-900">
                                    <a href="{{ path('app_health_specialist_show', {healthSpecialist: specialist.id}) }}">
                                        <span class="absolute inset-x-0 -top-px bottom-0"></span>
                                        {{ specialist.fullName }}
                                    </a>
                                </p>
                                <p class="mt-1 flex text-xs/5 text-gray-500">
                                    {{ specialist.introduction }}
                                </p>
                            </div>
                        </div>
                        <div class="flex shrink-0 items-center gap-x-4">
                            <svg class="size-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                                <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                            </svg>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            {% endfor %}
        </div>
    </main>

{% endblock %}